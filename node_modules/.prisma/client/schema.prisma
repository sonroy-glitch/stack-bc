generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int        @id @default(autoincrement())
  name           String     @unique
  email          String     @unique
  password       String
  about          String     @default("")
  tags           String[]   @default([])
  time           Float
  forgotPassword Boolean    @default(false)
  plan           Int        @default(0)
  leftQuestions  Int        @default(1)
  points         Int        @default(0)
  question       Question[]
  answer         Answer[]
}

model Question {
  id          Int      @id @default(autoincrement())
  user_id     Int
  name        String
  title       String
  description String
  answer      Answer[]
  upvote      Int[]    @default([])
  downvote    Int[]    @default([])
  tags        String[] @default([])
  time        Float
  user        User     @relation(fields: [user_id], references: [id])
}

model Answer {
  id          Int      @id @default(autoincrement())
  user_id     Int
  name        String
  question_id Int
  answer      String
  time        Float
  user        User     @relation(fields: [user_id], references: [id])
  question    Question @relation(fields: [question_id], references: [id])
}
